<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/default_horizontal_margin"
        android:focusable="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#EDF1FF"
            android:layout_marginVertical="@dimen/default_5dp"
            app:cardCornerRadius="@dimen/default_15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/default_30dp"
                android:layout_height="@dimen/default_30dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_1dp"
                app:cardElevation="@dimen/default_1dp"
                app:cardCornerRadius="@dimen/default_15dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@color/colorPrimary"
                    android:contentDescription="@string/just_image"/>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/normal_text_sp"
            android:fontFamily="@font/helvetica_medium"
            app:layout_constraintBottom_toTopOf="@id/translation"
            tools:text="sassdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/translation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/default_6dp"
            android:gravity="start"
            android:textSize="@dimen/normal_text_sp"
            android:fontFamily="@font/helvetica_roman"
            android:textColor="@color/textColor"
            tools:text = "fdmh ke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintTop_toBottomOf="@id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
