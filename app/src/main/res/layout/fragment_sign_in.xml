<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.login.LoginFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="abm.co.studycards.ui.login.LoginViewModel" />
    </data>

    <ScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:alpha="@{viewmodel.loading ? 0.5f : 1f}"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:onClick="@{()->viewmodel.navigateToRegistration()}"
                    android:padding="15dp"
                    android:focusable="@{!viewmodel.loading}"
                    android:clickable="@{!viewmodel.loading}"
                    android:text="@string/registration"
                    android:textColor="@color/select_text_as_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name_of_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.23000002" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_of_app"
                    android:layout_marginTop="12dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_of_app">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_container"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:nextFocusDown="@id/password_container"
                        android:background="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:maxLines="1"
                            android:lines="1"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:text="@{viewmodel.email}"
                            android:textColorHint="#757575" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_container"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/password"
                        android:nextFocusDown="@id/login_btn"
                        android:background="@android:color/transparent"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="@{viewmodel.password}"
                            android:textColorHint="#757575" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@{viewmodel.error}"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:visibility="@{viewmodel.error != null ? View.VISIBLE : View.GONE, default = gone}" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:onClick="@{()->viewmodel.loginViaEmail()}"
                        android:paddingVertical="15dp"
                        android:focusable="@{!viewmodel.loading}"
                        android:clickable="@{!viewmodel.loading}"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:focusable="@{!viewmodel.loading}"
                        android:clickable="@{!viewmodel.loading}"
                        android:onClick="@{()->viewmodel.navigateToForgotPassword()}"
                        android:text="@string/forget_password"
                        android:textColor="@color/select_text_as_button" />
                </LinearLayout>

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/google_sign_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="center"
                    android:focusable="@{!viewmodel.loading}"
                    android:clickable="@{!viewmodel.loading}"
                    android:onClick="@{() ->viewmodel.loginViaGoogle()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.9" />

                <TextView
                    android:id="@+id/anonymous_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:focusable="@{!viewmodel.loading}"
                    android:clickable="@{!viewmodel.loading}"
                    android:onClick="@{()->viewmodel.loginAnonymously()}"
                    android:text="@string/continue_without_registration"
                    android:textAlignment="center"
                    android:textColor="@color/select_text_as_button"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/google_sign_in"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.85" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{viewmodel.loading ? View.VISIBLE : View.GONE, default=gone}" />

        </FrameLayout>


    </ScrollView>
</layout>