<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.games.select.SelectLearnTypeDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/learn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/item_select_vertical_padding">

            <ImageView
                android:id="@+id/learn_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/default_12dp"
                android:contentDescription="@string/icon"
                android:padding="@dimen/default_5dp"
                app:srcCompat="@drawable/ic_play"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/learn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/learn_image"
                android:fontFamily="@font/helvetica_medium"
                android:text="@string/learn"
                android:textColor="@color/textColor"
                android:textSize="@dimen/normal_text_sp" />

            <TextView
                android:id="@+id/learn_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/learn_title"
                android:textSize="@dimen/normal_text_sp"
                android:fontFamily="@font/helvetica_light"
                android:textColor="@color/secondTextColor"
                android:layout_toEndOf="@id/learn_image" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/item_select_vertical_padding">

            <ImageView
                android:id="@+id/repeat_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/default_12dp"
                android:contentDescription="@string/icon"
                android:padding="@dimen/default_5dp"
                app:srcCompat="@drawable/ic_repeat"
                app:tint="@color/lighter_darker" />

            <TextView
                android:id="@+id/repeat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/repeat_image"
                android:fontFamily="@font/helvetica_medium"
                android:text="@string/repeat"
                android:textColor="@color/textColor"
                android:textSize="@dimen/normal_text_sp" />

            <TextView
                android:id="@+id/repeat_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repeat_title"
                android:textSize="@dimen/normal_text_sp"
                android:fontFamily="@font/helvetica_light"
                android:textColor="@color/secondTextColor"
                android:layout_toEndOf="@id/repeat_image" />
            <TextView
                android:id="@+id/repeat_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repeat_subtitle"
                android:textSize="@dimen/normal_text_sp"
                android:fontFamily="@font/helvetica_light"
                android:textColor="@color/secondTextColor"
                android:visibility="gone"
                android:layout_toEndOf="@id/repeat_image" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/one_type_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_select_vertical_padding">

                <ImageView
                    android:id="@+id/one_game_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/default_12dp"
                    android:contentDescription="@string/icon"
                    android:padding="@dimen/default_5dp"
                    app:srcCompat="@drawable/ic_repeat_one"
                    app:tint="@color/lighter_darker" />

                <TextView
                    android:id="@+id/one_game_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/one_game_image"
                    android:fontFamily="@font/helvetica_medium"
                    android:text="@string/one_game"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/normal_text_sp" />

                <TextView
                    android:id="@+id/one_game_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/one_game_title"
                    android:layout_toEndOf="@id/one_game_image"
                    android:fontFamily="@font/helvetica_light"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/normal_text_sp"
                    tools:text="wsgdf" />

                <TextView
                    android:id="@+id/one_game_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/one_game_subtitle"
                    android:layout_toEndOf="@id/one_game_image"
                    android:fontFamily="@font/helvetica_light"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/normal_text_sp"
                    tools:text="wsgdf" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/one_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/one_type_game"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/pairing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/default_horizontal_margin"
                    android:paddingVertical="@dimen/default_6dp">

                    <ImageView
                        android:id="@+id/pairing_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_12dp"
                        android:contentDescription="@string/icon"
                        android:padding="@dimen/default_5dp"
                        app:srcCompat="@drawable/ic_pairing"
                        app:tint="@color/lighter_darker" />

                    <TextView
                        android:id="@+id/pairing_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/pairing_image"
                        android:fontFamily="@font/helvetica_medium"
                        android:text="@string/pairing"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/normal_text_sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/guessing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="@dimen/default_horizontal_margin"
                    android:paddingVertical="@dimen/default_6dp">

                    <ImageView
                        android:id="@+id/guessing_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_12dp"
                        android:contentDescription="@string/icon"
                        android:padding="@dimen/default_5dp"
                        app:srcCompat="@drawable/ic_quiz"
                        app:tint="@color/lighter_darker" />

                    <TextView
                        android:id="@+id/guessing_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/guessing_image"
                        android:fontFamily="@font/helvetica_medium"
                        android:text="@string/guessing"
                        android:textColor="@color/textColor" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/item_select_vertical_padding">

            <ImageView
                android:id="@+id/review_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/default_12dp"
                android:contentDescription="@string/icon"
                android:padding="@dimen/default_5dp"
                app:srcCompat="@drawable/ic_refresh"
                app:tint="@color/lighter_darker" />

            <TextView
                android:id="@+id/review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/helvetica_medium"
                android:layout_toEndOf="@id/review_image"
                android:text="@string/review_words"
                android:textSize="@dimen/normal_text_sp"
                android:textColor="@color/textColor" />
        </RelativeLayout>
    </LinearLayout>
</layout>
