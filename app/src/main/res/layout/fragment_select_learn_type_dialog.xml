<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/background"
    tools:context=".ui.games.select.SelectLearnTypeDialogFragment">

    <RelativeLayout
        android:id="@+id/learn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        style="?android:attr/listSeparatorTextViewStyle">
        <ImageView
            android:id="@+id/learn_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play"
            android:padding="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle"
            app:tint="@color/green"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon" />

        <TextView
            android:id="@+id/learn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/learn_image"
            android:text="@string/learn"
            android:textColor="@color/textColor"/>

        <TextView
            android:id="@+id/learn_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/learn_title"
            android:layout_toEndOf="@id/learn_image" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        style="?android:attr/listSeparatorTextViewStyle">
        <ImageView
            android:id="@+id/repeat_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/icon"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_repeat"
            app:tint="@color/lighter_darker" />

        <TextView
            android:id="@+id/repeat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/repeat_image"
            android:text="@string/repeat"
            android:textColor="@color/textColor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/repeat_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repeat_title"
            android:layout_toEndOf="@id/repeat_image" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/one_type_game"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/one_game_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/icon"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_repeat_one"
                app:tint="@color/lighter_darker" />

            <TextView
                android:id="@+id/one_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/one_game_image"
                android:text="@string/one_game"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/one_game_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "wsgdf"
                android:layout_below="@id/one_game_title"
                android:layout_toEndOf="@id/one_game_image" />

            <TextView
                android:id="@+id/one_game_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "wsgdf"
                android:layout_below="@id/one_game_subtitle"
                android:layout_toEndOf="@id/one_game_image" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/one_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/one_type_game"
            android:visibility="gone"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/pairing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:focusable="true"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/pairing_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_add"
                    app:tint="@color/lighter_darker"
                    android:contentDescription="@string/icon" />

                <TextView
                    android:id="@+id/pairing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/pairing_image"
                    android:text="@string/pairing"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/guessing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/guessing_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/icon"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_arrow_right"
                    app:tint="@color/lighter_darker" />

                <TextView
                    android:id="@+id/guessing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/guessing_image"
                    android:layout_centerVertical="true"
                    android:text="@string/guessing"
                    android:textColor="@color/textColor"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        style="?android:attr/listSeparatorTextViewStyle">
        <ImageView
            android:id="@+id/review_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_review"
            android:padding="5dp"
            android:layout_marginEnd="12dp"
            app:tint="@color/lighter_darker"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon" />
        <TextView
            android:id="@+id/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_words"
            android:textColor="@color/textColor"
            android:layout_toEndOf="@id/review_image"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>