<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/default_6dp"
        app:cardElevation="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/inner_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_horizontal_margin"
            app:cardCornerRadius="@dimen/default_6dp"
            app:cardElevation="@dimen/default_2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_horizontal_margin"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/right_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/default_14dp"
                    android:layout_marginTop="@dimen/default_18dp"
                    android:background="@drawable/border_color_green"
                    android:fontFamily="@font/helvetica_bold"
                    android:padding="@dimen/default_8dp"
                    android:rotation="-20"
                    android:text="@string/know"
                    android:textColor="@color/swiping_know"
                    android:textSize="@dimen/bigger_text_sp" />

                <TextView
                    android:id="@+id/bottom_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/default_30dp"
                    android:background="@drawable/border_color_yellow"
                    android:fontFamily="@font/helvetica_bold"
                    android:padding="@dimen/default_8dp"
                    android:text="@string/uncertain_lower"
                    android:textColor="@color/swiping_doubted"
                    android:textSize="@dimen/bigger_text_sp"
                    app:drawableTint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/left_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/default_18dp"
                    android:layout_marginEnd="@dimen/default_14dp"
                    android:background="@drawable/border_color_red"
                    android:fontFamily="@font/helvetica_bold"
                    android:padding="@dimen/default_8dp"
                    android:rotation="20"
                    android:text="@string/unknown_lower"
                    android:textColor="@color/swiping_n_know"
                    android:textSize="@dimen/bigger_text_sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/word_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/word"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/default_7dp">

                    <ImageView
                        android:id="@+id/word_image"
                        android:layout_width="@dimen/square_word_image_width"
                        android:layout_height="@dimen/square_word_image_height"
                        android:layout_gravity="center"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        tools:srcCompat="@drawable/ic_image" />
                </androidx.cardview.widget.CardView>


                <ImageView
                    android:id="@+id/audio_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/word"
                    android:padding="@dimen/default_6dp"
                    app:srcCompat="@drawable/ic_play"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="@string/play" />

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_medium"
                    android:maxLines="6"
                    android:paddingVertical="@dimen/default_vertical_margin"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/bigger_text_sp"
                    tools:text="order" />

                <TextView
                    android:id="@+id/translated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/word"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/mar_btwn_btns"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_roman"
                    android:maxLines="5"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/bigger_text_sp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.cardview.widget.CardView>
</layout>
