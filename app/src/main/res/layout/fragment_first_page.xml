<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.first_page.FirstPageFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="abm.co.studycards.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="@{viewmodel.loading ? 0.5f : 1f}"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.41" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/welcome"
            android:src="@drawable/launch_image"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintDimensionRatio=".98:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:gravity="center_horizontal"
                android:text="@string/first_page_title"
                android:textColor="@color/textColor"
                android:textSize="@dimen/big_text_sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/first_page_default_margin"
                android:fontFamily="@font/helvetica_roman"
                android:gravity="center_horizontal"
                android:text="@string/first_page_second_title"
                android:textColor="@color/secondTextColor"
                android:textSize="@dimen/normal_text_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/login_anonymously"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_itself"
                android:clickable="@{!viewmodel.loading}"
                android:focusable="@{!viewmodel.loading}"
                android:minHeight="@dimen/btn_min_height"
                android:onClick="@{()->viewmodel.loginAnonymously()}"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/grey"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/first_page_btn_hor_margin"
                    android:layout_marginVertical="@dimen/first_page_default_margin"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/continue_without_registration"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/first_page_btn_sp"
                    app:drawableStartCompat="@drawable/ic_anonymous" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/login_with_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_btwn_btns"
                android:backgroundTint="@color/color_itself"
                android:clickable="@{!viewmodel.loading}"
                android:focusable="@{!viewmodel.loading}"
                android:minHeight="@dimen/btn_min_height"
                android:onClick="@{()->viewmodel.navigateToEmailFragment()}"
                app:cardCornerRadius="@dimen/default_4dp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/default_1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/first_page_btn_hor_margin"
                    android:layout_marginVertical="@dimen/first_page_default_margin"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/continue_with_email"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/first_page_btn_sp"
                    app:drawableStartCompat="@drawable/ic_mail" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/login_with_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_btwn_btns"
                android:clickable="@{!viewmodel.loading}"
                android:focusable="@{!viewmodel.loading}"
                android:minHeight="@dimen/btn_min_height"
                android:onClick="@{()->viewmodel.loginViaGoogle()}"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/default_4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/first_page_btn_hor_margin"
                    android:layout_marginVertical="@dimen/first_page_default_margin"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/google_sign"
                    android:textColor="@color/white"
                    android:textSize="@dimen/first_page_btn_sp"
                    app:drawableStartCompat="@drawable/ic_google" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/don_t_have_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_btwn_btns"
                android:clickable="@{!viewmodel.loading}"
                android:focusable="@{!viewmodel.loading}"
                android:gravity="center"
                android:minHeight="@dimen/clickable_text_min_height"
                android:onClick="@{()->viewmodel.navigateToRegistration()}"
                android:text="@string/don_t_have_account"
                android:textColor="@color/select_text_as_button"
                android:textSize="@dimen/normal_text_sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewmodel.loading ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>