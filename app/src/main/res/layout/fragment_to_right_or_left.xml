<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.games.rightleft.ToRightOrLeftFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/background"
            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    tools:text="BASIC" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/card_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar" />

        <TextView
            android:id="@+id/my_left_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/unknown_swipe_text"
            android:textAlignment="center"
            android:textColor="@color/swiping_n_know"
            android:visibility="invisible"
            app:drawableTint="@color/swiping_n_know"
            app:drawableTopCompat="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/my_bottom_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="@string/uncertain_swipe_text"
            android:textAlignment="center"
            android:textColor="@color/swiping_doubted"
            android:visibility="invisible"
            app:drawableBottomCompat="@drawable/ic_arrow_down"
            app:drawableTint="@color/swiping_doubted" />

        <TextView
            android:id="@+id/my_right_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/known_swipe_text"
            android:textAlignment="center"
            android:textColor="@color/swiping_know"
            android:visibility="invisible"
            app:drawableTint="@color/swiping_know"
            app:drawableTopCompat="@drawable/ic_arrow_right" />

    </RelativeLayout>
</layout>