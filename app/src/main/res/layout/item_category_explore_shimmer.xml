<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_150dp"
        android:layout_marginVertical="@dimen/default_8dp">

        <View
            android:id="@+id/item_shimmer"
            android:layout_width="@dimen/default_120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/item_shimmer2"
            android:layout_width="@dimen/default_120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintStart_toEndOf="@id/item_shimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/item_shimmer3"
            android:layout_width="@dimen/default_120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintStart_toEndOf="@id/item_shimmer2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
