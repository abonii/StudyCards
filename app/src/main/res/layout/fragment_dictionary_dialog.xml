<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.add_word.dialog.dictionary.DictionaryDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_12dp">

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/textColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/word"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/color_itself"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/helvetica_bold"
                android:foreground="?attr/selectableItemBackground"
                android:paddingVertical="@dimen/default_10dp"
                android:text="@string/cancel"
                android:textColor="@color/textColor"
                app:cornerRadius="@dimen/default_9dp"
                app:layout_constraintEnd_toStartOf="@id/div"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_container" />

            <View
                android:id="@+id/div"
                android:layout_width="@dimen/default_1dp"
                android:layout_height="@dimen/default_40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="@id/cancel"
                app:layout_constraintEnd_toStartOf="@id/save"
                app:layout_constraintStart_toEndOf="@id/cancel"
                app:layout_constraintTop_toTopOf="@id/cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/helvetica_bold"
                android:foreground="?attr/selectableItemBackground"
                android:paddingVertical="@dimen/default_10dp"
                android:text="@string/save"
                android:textColor="@color/colorPrimary"
                app:cornerRadius="@dimen/default_9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/div"
                app:layout_constraintTop_toBottomOf="@id/category_container" />
        </LinearLayout>
    </RelativeLayout>
</layout>
