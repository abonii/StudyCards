<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_50dp"
        android:layout_marginVertical="@dimen/default_4dp">

        <View
            android:id="@+id/count_shimmer"
            android:layout_width="@dimen/default_50dp"
            android:layout_height="@dimen/default_18dp"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/title_shimmer"
            android:layout_width="@dimen/default_150dp"
            android:layout_height="@dimen/default_23dp"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/count_shimmer" />

        <View
            android:id="@+id/play_shimmer"
            android:layout_width="@dimen/default_30dp"
            android:layout_height="@dimen/default_30dp"
            android:layout_marginEnd="@dimen/default_horizontal_margin"
            android:background="@color/shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_1dp"
            android:background="@color/shimmer"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
