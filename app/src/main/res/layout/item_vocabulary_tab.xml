<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_3dp"
        app:dragEdge="right"
        app:revealMode="same_level">

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/first_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/default_5dp"
                android:fontFamily="@font/helvetica_roman"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:text="@string/know"
                android:textSize="@dimen/default_12sp"
                app:cornerRadius="@dimen/default_10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/second_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/default_5dp"
                android:textAllCaps="false"
                android:textSize="@dimen/default_10sp"
                android:fontFamily="@font/helvetica_roman"
                tools:text="@string/unknown"
                app:cornerRadius="@dimen/default_10dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/default_10dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_1dp"
                app:cardCornerRadius="@dimen/default_10dp"
                app:cardElevation="@dimen/default_1dp"
                app:contentPadding="@dimen/default_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/expansion_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_headerIndicator="@id/header_indicator"
                        app:expansion_layout="@id/expansionLayout"
                        app:expansion_toggleOnClick="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/word"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="@string/review_words"
                                android:textColor="@color/textColor"
                                android:fontFamily="@font/helvetica_bold" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/header_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginStart="@dimen/default_16dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/icon"
                            android:padding="@dimen/default_4dp"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                            app:tint="@color/darker_than_usual" />
                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/translation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/upper_learn" />

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="@dimen/default_250dp"
                                android:layout_height="@dimen/default_250dp"
                                android:layout_below="@id/translation"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:contentDescription="@string/just_image"/>

                            <TextView
                                android:id="@+id/example"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@color/second_color" />
                        </RelativeLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</layout>