<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color</item>
        <item name="colorSecondaryVariant">@color/third_color</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background</item>
        <item name="android:windowLightStatusBar" >true</item>
        <!-- BottomSheet-->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!--Toolbar-->
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="textInputStyle">@style/TextInputLayoutTheme</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>

        <item name="colorControlNormal">@color/textColor</item>

        <item name="android:listDivider">@drawable/divider</item>

        <item name="android:editTextStyle">@style/MyCustomEditTextStyle</item>
    </style>
    <!--bottomSheet-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

    <!--tabs-->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/helvetica_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius_dp</item>
        <item name="android:paddingTop">@dimen/button_padding_vertically</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertically</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_background</item>
        <item name="android:textColor">@drawable/bottom_navigation_background</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@android:color/transparent</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="WordTextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="endIconDrawable">@drawable/ic_translate</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_back</item>
        <item name="colorControlNormal">@color/textColor</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/secondTextColor</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:textSize">@dimen/edit_text_sp</item>
    </style>

</resources>