<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="inExploreFragment"
            type="abm.co.studycards.ui.in_explore.InExploreCategoryFragment" />

        <variable
            name="viewmodel"
            type="abm.co.studycards.ui.in_explore.InExploreViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_background"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="@dimen/toolbar_title_sp"
                android:fontFamily="@font/helvetica_bold"
                android:layout_gravity="center"
                tools:text="BASIC" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_background"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_4dp"
                android:layout_marginBottom="@dimen/default_8dp"
                android:backgroundTint="#EDF1FF"
                app:cardCornerRadius="@dimen/default_40dp"
                app:layout_constraintBottom_toTopOf="@id/words_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/default_80dp"
                    android:layout_height="@dimen/default_80dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/default_1dp"
                    app:cardCornerRadius="@dimen/default_40dp">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:imageWithGlide="@{viewmodel.categoryPhotoUrl}"
                        app:srcCompat="@color/colorPrimary"
                        android:contentDescription="@string/just_image" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/words_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                android:layout_marginBottom="@dimen/default_8dp"
                android:fontFamily="@font/helvetica_medium"
                android:gravity="center"
                android:text="@{@plurals/words(viewmodel.wordsCount,viewmodel.wordsCount)}"
                android:textColor="@color/textColor"
                android:textSize="@dimen/bigger_text_sp"
                app:layout_constraintBottom_toTopOf="@id/add_to_yourself"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_container"
                tools:text="500 words" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_yourself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                android:layout_marginBottom="@dimen/default_8dp"
                android:textColor="@color/white"
                android:onClick="@{()->inExploreFragment.addToYourself()}"
                android:text="@string/add_to_yourself"
                android:visibility="@{viewmodel.isThisCategoryExistInMine ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@id/div"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/words_count" />

            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_2dp"
                android:background="@color/border"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_container"
            tools:listitem="@layout/item_explore_word" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_occurred"
            android:textColor="@color/textColor"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_container" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>