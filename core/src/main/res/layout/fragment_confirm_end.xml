<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.games.confirmend.ConfirmEndFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/default_25dp"
        android:paddingTop="@dimen/default_12dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/default_100dp"
            android:layout_height="@dimen/default_200dp"
            android:layout_marginTop="@dimen/default_10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/just_image"
            android:visibility="gone"
            app:srcCompat="@drawable/image_finished" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_20dp"
            android:fontFamily="@font/helvetica_roman"
            android:text="@string/great_job"
            android:textColor="@color/textColor"
            android:textSize="@dimen/toolbar_title_sp" />

        <TextView
            android:id="@+id/second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_horizontal_margin"
            android:textColor="@color/textColor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/default_8dp"
            android:fontFamily="@font/helvetica_bold"
            android:paddingVertical="@dimen/default_15dp"
            android:paddingStart="@dimen/default_15dp"
            android:paddingEnd="0dp"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_text"
            android:layout_marginTop="@dimen/default_8dp"
            android:layout_toStartOf="@id/ok"
            android:fontFamily="@font/helvetica_bold"
            android:paddingHorizontal="@dimen/default_15dp"
            android:paddingVertical="@dimen/default_15dp"
            android:text="@string/cancel"
            android:textColor="@color/red"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginHorizontal="@dimen/default_12dp"
            android:layout_marginTop="@dimen/default_25dp"
            android:layout_marginBottom="@dimen/default_15dp"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textSize="@dimen/default_14sp"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

    </RelativeLayout>
</layout>
