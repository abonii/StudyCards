<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.add_word.AddEditWordFragment">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="wordFragment"
            type="abm.co.studycards.ui.add_word.AddEditWordFragment" />

        <variable
            name="viewmodel"
            type="abm.co.studycards.ui.add_word.AddEditWordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/helvetica_bold"
                    android:text="@string/add_edit_title"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/toolbar_title_sp" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/word_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="@{viewmodel.imageVisibleStateFlow ? View.VISIBLE : View.GONE}"
                    app:cardCornerRadius="@dimen/default_4dp">

                    <ImageView
                        android:id="@+id/word_image"
                        android:layout_width="@dimen/square_word_image_width"
                        android:layout_height="@dimen/square_word_image_height"
                        android:layout_gravity="center"
                        android:contentDescription="@string/image"
                        android:onClick="@{()->wordFragment.shakeImageContainer()}"
                        android:scaleType="centerCrop"
                        app:imageWithGlideAndErrorImage="@{viewmodel.imageCanSetUrlStateFlow ? viewmodel.imageStateFlow : ``}"
                        tools:srcCompat="@drawable/ic_image" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/default_10dp"
                    android:drawablePadding="@dimen/default_8dp"
                    android:fontFamily="@font/helvetica_roman"
                    android:gravity="start|center_vertical"
                    android:onClick="@{()->wordFragment.directToCategoryDialogFragment()}"
                    android:text="@{viewmodel.categoryStateFlow}"
                    android:textSize="@dimen/normal_text_sp"
                    app:drawableStartCompat="@drawable/ic_folder"
                    tools:text="Some set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/top_btn_margin_ver"
                    android:fontFamily="@font/helvetica_roman"
                    android:languageText="@{viewmodel.sourceLanguage}"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/default_13sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/word_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:isTranslating="@{viewmodel.sourceTranslatingStateFlow}"
                    android:maxLength="100"
                    android:theme="@style/WordTextInputLayoutTheme"
                    app:endIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/helvetica_bold"
                        android:languageHint="@{viewmodel.sourceLanguage}"
                        android:maxLength="100"
                        android:text="@={viewmodel.sourceWordStateFlow}"
                        android:textSize="@dimen/big_text_sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_btns"
                    android:fontFamily="@font/helvetica_roman"
                    android:languageText="@{viewmodel.targetLanguage}"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/default_13sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/translated_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:isTranslating="@{viewmodel.targetTranslatingStateFlow}"
                    android:maxLength="250"
                    android:theme="@style/WordTextInputLayoutTheme"
                    app:endIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/translated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/helvetica_bold"
                        android:languageHint="@{viewmodel.targetLanguage}"
                        android:text="@={viewmodel.targetWordStateFlow}"
                        android:textSize="@dimen/big_text_sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_btns"
                    android:fontFamily="@font/helvetica_roman"
                    android:text="@string/example"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/default_13sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/example_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_btns"
                    android:lineSpacingExtra="@dimen/default_5dp"
                    app:boxStrokeColor="@color/grey"
                    app:boxStrokeWidth="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/add_example"
                        android:maxLength="500"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/default_5dp"
                        android:text="@={viewmodel.examplesStateFlow}"
                        android:textSize="@dimen/normal_text_sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_larger_btns"
                    android:fontFamily="@font/helvetica_roman"
                    android:text="@string/image"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/default_13sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/image_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_btns"
                    app:boxStrokeColor="@color/grey"
                    app:boxStrokeWidth="@dimen/default_1dp"
                    app:endIconDrawable="@{TextUtils.isEmpty(viewmodel.imageStateFlow) ? null : @drawable/ic_clear}"
                    app:endIconMode="custom"
                    app:endIconTint="@color/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/image_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_link"
                        android:drawablePadding="@dimen/default_6dp"
                        android:ellipsize="end"
                        android:hint="@string/image_url"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLines="2"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:text="@={viewmodel.imageStateFlow}"
                        android:textSize="@dimen/normal_text_sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/mar_btwn_btns"
                    android:onClick="@{()->viewmodel.saveWord()}"
                    android:text="@string/save"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/translated_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_horizontal_margin"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/normal_text_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>